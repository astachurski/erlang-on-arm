#ifndef EXPORT_H_
#define EXPORT_H_

// Export table
#include "index.h"

//@todo make N export tables where N is number of possible code versions
static IndexTable export_table;

typedef struct {
	Eterm module;
	Eterm function;
	uint8_t arity;
	BeamInstr* address;
} Export;

void init_export_table(void);
Export* erts_export_put(Eterm module, Eterm function, uint8_t arity);

#endif /* EXPORT_H_ */
