#ifndef INDEX_H_
#define INDEX_H_

#include "hash.h"

typedef struct {
	HashBucket bucket;
	int index;
} IndexSlot;

typedef struct {
 	Hash htable; // obj -> index
	int size; // allocated size
	int limit; // max size
	int entries; // number of entries
	IndexSlot*** seg_table; // index -> obj
};

IndexTable* erts_index_init(IndexTable*, char*, int, int, HashFunctions);

#endif /* INDEX_H_ */
