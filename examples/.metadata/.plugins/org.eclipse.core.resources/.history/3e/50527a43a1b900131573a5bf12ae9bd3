#ifndef GLOBAL_H_
#define GLOBAL_H_

#define DEBUG 1

#include "FreeRTOS.h"
#include "task.h"
#include "io.h"
#include "sys.h"
#include "erl_term.h"
#include "config.h"

typedef uint8_t byte;

typedef Eterm BeamInstr;

typedef struct {
	Eterm name; // atom with the module name
	uint16_t size; // number of BeamInstr instructions in the code
	BeamInstr* code;
} BeamModule;


#endif /* GLOBAL_H_ */
