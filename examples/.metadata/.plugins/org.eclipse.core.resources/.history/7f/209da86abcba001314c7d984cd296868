#ifndef BEAM_EMU_H_
#define BEAM_EMU_H_

#define CALL_EXT 0x07
#define CALL_EXT_LAST 0x08
#define BIF0 0x09
#define BIF1 0x0A
#define BIF2 0x0B

#define CALL_EXT_ONLY 0x4E

#define GC_BIF1 7C
#define GC_BIF2 7D
#define GC_BIF3 98

//opcodes that have an external label as a first argument
#define EXTERNAL_OP_1 (BIF0 || BIF1 || BIF2 || GC_BIF1 || GC_BIF2 || GC_BIF3)
//and as a second argument
#define EXTERNAL_OP_2 (CALL_EXT || CALL_EXT_LAST || CALL_EXT_ONLY)

#endif /* BEAM_EMU_H_ */
