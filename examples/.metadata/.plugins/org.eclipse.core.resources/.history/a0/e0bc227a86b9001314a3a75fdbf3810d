#ifndef SYS_H_
#define SYS_H_

static void *pvPortCalloc( size_t nmemb, size_t size )
{
void *pvReturn;

vTaskSuspendAll();
{
pvReturn = calloc( nmemb, size );
}
xTaskResumeAll();

return pvReturn;
}


static void *pvPortRealloc( void *pv, size_t size )
{
void *pvReturn;

vTaskSuspendAll();
{
pvReturn = realloc( pv, size );
}
xTaskResumeAll();

return pvReturn;
}

#endif /* SYS_H_ */
